{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "module": "es6",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "src/*"
  ]
}